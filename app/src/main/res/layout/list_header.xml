<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/header_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/header_day"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/header_day"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            tools:text="Sat 5 Jan"
            android:textAppearance="@style/HeaderDayTextStyle" />


    <TextView
        android:id="@+id/header_total_time"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        tools:text="2 H 31 Min 42 S"
        android:textAppearance="@style/HeaderTotalTimeTextStyle" />

</RelativeLayout>