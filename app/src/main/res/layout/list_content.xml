<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_item_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/listItemBackground">

    <ImageView
            android:id="@+id/content_item_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/content_item_image"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:src="@tools:sample/avatars"/>

    <TextView
            android:id="@+id/content_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:layout_toEndOf="@id/content_item_time"
            tools:text="17:16:05  -  17:47:11"
            android:textAppearance="@style/ContentIntervalTimeTextStyle"/>

    <TextView
            android:id="@+id/content_item_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:layout_marginEnd="16dp"
            tools:text="41 min 06 s"
            android:textAppearance="@style/ContentTotalTimeTextStyle"/>

</RelativeLayout>